{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2017"],
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "types": ["react-native", "jest", "node"],
    "resolveJsonModule": true,
    "allowJs": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@api": ["src/api"],
      "@queries": ["src/queries"],
      "@i18n": ["i18n/supportedLanguages.ts"],
      "@theme": ["src/theme.ts"],
      "@utils/*": ["src/utils/*"]
    },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "react-16-node-hanging-test-fix.ts"
  ],
  "include": ["**/*.ts", "**/*.tsx", "jest-config/restore-promise.js", "react-16-node-hanging-test-fix.js"],
}
